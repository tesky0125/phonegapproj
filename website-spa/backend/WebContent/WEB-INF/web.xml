<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>backend</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>UserInfo</servlet-name>
    <servlet-class>org.backend.servlet.UserInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Advertise</servlet-name>
    <servlet-class>org.backend.servlet.AdvertiseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DynamicMesg</servlet-name>
    <servlet-class>org.backend.servlet.DynamicMesgServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployGuide</servlet-name>
    <servlet-class>org.backend.servlet.EmployGuideServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LifeService</servlet-name>
    <servlet-class>org.backend.servlet.LifeServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OnlineTrain</servlet-name>
    <servlet-class>org.backend.servlet.OnlineTrainServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecruitInfo</servlet-name>
    <servlet-class>org.backend.servlet.RecruitInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ScrollShow</servlet-name>
    <servlet-class>org.backend.servlet.ScrollShowServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>org.backend.servlet.UploadServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserInfo</servlet-name>
    <url-pattern>/user_info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>Advertise</servlet-name>
    <url-pattern>/advertise</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>DynamicMesg</servlet-name>
    <url-pattern>/dynamic_mesg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>EmployGuide</servlet-name>
    <url-pattern>/employ_guide</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>LifeService</servlet-name>
    <url-pattern>/life_service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>OnlineTrain</servlet-name>
    <url-pattern>/online_train</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>RecruitInfo</servlet-name>
    <url-pattern>/recruit_info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ScrollShow</servlet-name>
    <url-pattern>/scroll_show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    
    <filter>
		<filter-name>CORS</filter-name>
		<filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
		<init-param>
			<param-name>cors.allowOrigin</param-name>
			<param-value>*</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportedMethods</param-name>
			<param-value>GET, POST, HEAD, PUT, DELETE</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportedHeaders</param-name>
			<param-value>Accept, Origin, X-Requested-With, Content-Type, Last-Modified</param-value>
		</init-param>
		<init-param>
			<param-name>cors.exposedHeaders</param-name>
			<param-value>Set-Cookie</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportsCredentials</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CORS</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>